                    android:layout_height="28dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
